          </ul>
        </li>
      </ul>
    </nav>
    <!-- Create BLOg -->
    <div style="display: none" id="layoutAuthentication">
      <div id="layoutAuthentication_content">
        <main>
          <div class="container">
            <div class="row justify-content-center">
              <div class="col-lg-7">
                <div class="card shadow-lg border-0 rounded-lg mt-5">
                  <div class="card-header">
                    <h3 class="text-center font-weight-light my-4">
                      Create Blogs
                    </h3>
                    <p
                      style="color: red; width: 100%; text-align: center"
                      id="invalid"
                    ></p>
                  </div>
                  <div class="card-body">
                    <!-- Add BLOG  from  -->

                    <form id="rform" enctype="multipart/form-data">
                      <div class="row mb-3">
                        <div class="col-md-6">
                          <div class="form-floating mb-3 mb-md-0">
                            <select
                              name="blogcategory"
                              class="form-control"
                              id="blogcategory"
                              required
                            >
                              <option value=""></option>
                              <option value="Tech">Tech</option>
                              <option value="Physicology">Physicology</option>
                              <option value="Sports">Sports</option>
                            </select>

                            <label for="blogcategory">Blog Category</label>
                          </div>
                        </div>
                        <div class="col-md-6">
                          <div class="form-floating">
                            <input
                              class="form-control"
                              id="Blog_name"
                              type="text"
                              placeholder="Blog_name"
                              required
                            />
                            <label for="Blog_name">Blog Name</label>
                          </div>
                        </div>
                      </div>

                      <div class="row mb-3">
                        <div class="col-md-6">
                          <div class="form-floating mb-3 mb-md-0">
                            <input
                              class="form-control"
                              type="file"
                              name="file"
                              id="file"
                            />

                            <label for="file">file max size 2mb</label>
                          </div>
                        </div>
                        <div class="col-md-6">
                          <div class="form-floating">
                            <input
                              class="form-control"
                              id="Seo"
                              type="text"
                              placeholder="Seo title"
                            />
                            <label for="Seo">Seo title</label>
                          </div>
                        </div>
                      </div>

                      <div class="row mb-3">
                        <div class="col-md-6">
                          <div class="form-floating mb-3 mb-md-0">
                            <input
                              class="form-control"
                              type="text"
                              name="Seo_Discription"
                              id="Seo_Discription"
                              placeholder="Seo_Discription"
                            />

                            <label for="Seo_Discription"
                              >Seo Discription
                            </label>
                          </div>
                        </div>
                        <div class="col-md-6">
                          <div class="form-floating">
                            <input
                              class="form-control"
                              id="Seo_keyword"
                              type="text"
                              placeholder="Seo_keyword"
                            />
                            <label for="Seo_keyword">Seo_keyword</label>
                          </div>
                        </div>
                      </div>

                      <div class="row-md-6">
                        <div class="form-floating">
                          <textarea
                            style="height: 200px"
                            name="description"
                            class="form-control"
                            id="blog"
                            placeholder="Write your Blog Here "
                            rows="4"
                            cols="40"
                          ></textarea>
                          <label for="blog">Write Your Blog Here.</label>
                        </div>
                      </div>

                      <div class="mt-4 mb-0">
                        <input
                          style="margin-left: 43%"
                          type="submit"
                          name=""
                          id=""
                        />
                      </div>
                    </form>

                    <!-- Add blog form end  -->
                  </div>
                  <div class="card-footer text-center py-3"></div>
                </div>
              </div>
            </div>
          </div>
        </main>
      </div>
    </div>

    <!-- Update Blog  -->

    <div style="display: none" id="Updateblog">
      <div id="layoutAuthentication_content">
        <main>
          <div class="container">
            <div class="row justify-content-center">
              <div class="col-lg-7">
                <div class="card shadow-lg border-0 rounded-lg mt-5">
                  <div class="card-header">
                    <h3 class="text-center font-weight-light my-4">
                      Update Blog
                    </h3>
                    <p
                      style="color: red; width: 100%; text-align: center"
                      id="ub_invalid"
                    ></p>
                  </div>
                  <div class="card-body">
                    <!-- Update BLOG  from  -->

                    <form id="UBform" enctype="multipart/form-data">
                      <input
                        style="width: 100px; display: none"
                        type="number"
                        name="id"
                        id="ub_id"
                      />
                      <input
                        style="display: none"
                        type="text"
                        name="ub_image"
                        id="ub_image"
                      />
                      <div class="row mb-3">
                        <div class="col-md-6">
                          <div class="form-floating mb-3 mb-md-0">
                            <select
                              name="blogcategory"
                              class="form-control"
                              id="ub_blogcategory"
                              required
                            >
                              <option value=""></option>
                              <option value="Tech">Tech</option>
                              <option value="Physicology">Physicology</option>
                              <option value="Sports">Sports</option>
                            </select>

                            <label for="blogcategory">Blog Category</label>
                          </div>
                        </div>
                        <div class="col-md-6">
                          <div class="form-floating">
                            <input
                              class="form-control"
                              id="ub_Blog_name"
                              type="text"
                              placeholder="Blog_name"
                              required
                            />
                            <label for="Blog_name">Blog Name</label>
                          </div>
                        </div>
                      </div>

                      <div class="row mb-3">
                        <div class="col-md-6">
                          <div class="form-floating mb-3 mb-md-0">
                            <input
                              class="form-control"
                              type="file"
                              name="file"
                              id="ub_file"
                            />

                            <label for="file">file max size 2mb</label>
                          </div>
                        </div>
                        <div class="col-md-6">
                          <div class="form-floating">
                            <input
                              class="form-control"
                              id="ub_Seo"
                              type="text"
                              placeholder="Seo title"
                            />
                            <label for="Seo">Seo title</label>
                          </div>
                        </div>
                      </div>

                      <div class="row mb-3">
                        <div class="col-md-6">
                          <div class="form-floating mb-3 mb-md-0">
                            <input
                              class="form-control"
                              type="text"
                              name="Seo_Discription"
                              id="ub_Seo_Discription"
                              placeholder="Seo_Discription"
                            />

                            <label for="Seo_Discription"
                              >Seo Discription
                            </label>
                          </div>
                        </div>
                        <div class="col-md-6">
                          <div class="form-floating">
                            <input
                              class="form-control"
                              id="ub_Seo_keyword"
                              type="text"
                              placeholder="Seo_keyword"
                            />
                            <label for="Seo_keyword">Seo_keyword</label>
                          </div>
                        </div>
                      </div>

                      <div class="row-md-6">
                        <div class="form-floating">
                          <textarea
                            style="height: 200px"
                            name="description"
                            class="form-control"
                            id="ub_blog"
                            placeholder="Write your Blog Here "
                            rows="4"
                            cols="40"
                          ></textarea>
                          <label for="blog">Write Your Blog Here.</label>
                        </div>
                      </div>

                      <div class="mt-4 mb-0">
                        <input
                          style="margin-left: 43%"
                          type="submit"
                          name=""
                          id=""
                        />
                      </div>
                    </form>

                    <!--  Update blog form end  -->
                  </div>
                  <div class="card-footer text-center py-3"></div>
                </div>
              </div>
            </div>
          </div>
        </main>
      </div>
    </div>

    <div id="Cpl">
      <a id="cpl"> <span>+</span>Create </a>
    </div>

    <div style="width: 85%; margin: auto" class="table-responsive">
      <table class="table">
        <thead>
          <th>Blog Name</th>
          <th>Blog Category</th>
          <th>Banner</th>

          <th>Edit</th>
          <th>Delete</th>
          <th>Visible</th>
        </thead>
        <tbody id="blogtb"></tbody>
      </table>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
      crossorigin="anonymous"
    ></script>
    <script src="/javascripts/admin.js"></script>
  </body>
</html>
